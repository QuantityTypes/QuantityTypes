<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3</TargetFrameworks>
    <AssemblyName>QuantityTypes.Csv</AssemblyName>
    <Description>CSV extensions for QuantityTypes</Description>

    <AssemblyOriginatorKeyFile>../QuantityTypes/QuantityTypes.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>true</SignAssembly>
    <PublicSign Condition=" '$(OS)' != 'Windows_NT' ">true</PublicSign>

    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>QuantityTypes.Csv</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageDescription>Provides CSV reading and writing, with support for QuantityTypes.</PackageDescription>
    <PackageIcon>Icon.png</PackageIcon>
    <PackageTags>physical quantities unit conversion units of measurement csv</PackageTags>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>http://github.com/QuantityTypes/QuantityTypes</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\QuantityTypes\QuantityTypes.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../Images/Icon.png" Pack="true" PackagePath="/"/>
  </ItemGroup>
</Project>
